<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="editText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="widgetListViewsItems" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Details Activity table tv -->
    <style name="table_details_textViews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:gravity">start</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="MyThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">#ffff</item>
    </style>

    <!-- toolbar textViews : -->
    <style name="toolbar_textView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- material button : -->
    <style name="btn_material" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <!-- Details layout button : -->
    <style name="btn_details" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- view line separator : -->
    <style name="view_separator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_marginStart">180dp</item>
        <item name="android:layout_marginEnd">180dp</item>
    </style>

    <!-- Bottom Navigation View : -->
    <style name="Widget.BottomNavigationViewActive"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/my_irancell_font_light</item>
    </style>

    <style name="Widget.BottomNavigationViewInActive"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/my_irancell_font_light</item>
    </style>

    <!-- alertDialog textView : -->
    <style name="tv_alert_dialog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/standard_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_margin</item>
        <item name="fontFamily">@font/my_irancell_font_bold</item>
        <item name="android:textColor">@color/red_delete</item>
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>

    <!-- alertDialog textView (congratulations) : -->
    <style name="tv_alert_dialog_congratulations" parent="tv_alert_dialog">
        <item name="fontFamily">@font/cinema_font</item>
        <item name="android:textColor">@color/logo_blue</item>
        <item name="android:textSize">@dimen/large_font_size</item>
    </style>

    <!-- alertDialog img btn : -->
    <style name="img_btn_alert_dialog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">8dp</item>

    </style>

    <!-- textInput EditText material : -->
    <style name="material_editText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/standard_padding</item>
        <item name="fontFamily">@font/my_irancell_font</item>
        <item name="android:gravity">center_vertical</item>
        <item name="maxLines">1</item>
    </style>

    <!-- material button register: -->
    <style name="btn_material_register" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">@font/cinema_font</item>
    </style>

    <!-- bottom sheet -->
    <style name="bottom_sheet">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="radioButtonChip" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_chip</item>
    </style>

    <!--chip-->
    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/chip_font</item>
    </style>

    <!--style for ripple library-->
    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>

    <!-- Splash -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_layer</item>
    </style>

    <style name="button_detail_bill">
        <item name="background">@drawable/button_detail_bill_bg</item>
    </style>

</resources>